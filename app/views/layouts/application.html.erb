<!DOCTYPE html>
<html>
<head>
  <title>Vim2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:600' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Enriqueta:700' rel='stylesheet' type='text/css'>
</head>
<body>
<!-- My nav bar, with logo and sign up and login buttons -->
<nav class="navbar navbar-default navbar-fixed-top">
    <%= link_to image_tag('vimlogo.png', :class=> "logo"),root_path %>

    <!-- Login Button - Modal -->
	  <button type="button" class="btn btn-default navbar-btn" id="signin-login" data-toggle="modal" data-target="#login-modal">Login</button>

    <!-- Signup Button - Modal -->
		<button type="button" class="btn btn-default navbar-btn" id="signin-login" data-toggle="modal" data-target="#signup-modal">Signup</button>

     <!-- Flash Button - Alert Popup -->
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
            <%= value %>
        </div>
            <% end %>

        <!-- Signed In ID -->
        <div class="pull-right" id="signed-in-as">
          <% if current_user %>
            <h4 class="signin">Signed in as <strong><%= current_user.name%></strong>
            <%= link_to "Logout", logout_path , class: "navbar-link btn btn-default navbar-btn "%></h4>
          <%else%>
            <%= %>
          <%end%>
        </div> 
</nav>

<!-- Signup Modal -->
<%= render 'users/signup_modal' %>

<!-- Login Modal -->
<%= render 'users/login_modal' %>

<!-- Main/Side Menu Bar -->
<div class="container-fluid main">
  <div class="row">
    <div class="col-md-4" id="sidenav-bar">
      <div class="list-group">
        <%= link_to "Home", root_path, class: "list-group-item" %>
        <% if current_user %>
        <%= link_to "Marketplace", users_path, class: "list-group-item" %>
        <% end %>
        <%= link_to "About Vim", pages_path, class: "list-group-item" %>
        <%= link_to "Contact Us", '/contact', class: "list-group-item" %>
        <%= link_to "Become A VIM trainer", betrainer_path, class: "list-group-item" %>
      </div>
    </div>

<%= yield %>

</body>
</html>
